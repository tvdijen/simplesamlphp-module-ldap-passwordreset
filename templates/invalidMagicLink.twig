{% set pagetitle = 'Invalid magic link'|trans %}

{% extends "@core/base.twig" %}

{% block preload %}
    <link rel="stylesheet" href="{{ asset('css/ldapPasswordReset.css', 'ldapPasswordReset') }}">
{% endblock %}

{% block content %}

    <h1>{{ 'Invalid magic link'|trans }}</h1>

    <div class="left">
        <p>{% trans %}The link you have used was not valid. Please note that magic links:{% endtrans %}</p>
        <ul id="magiclink">
            <li>{% trans %}are valid for a limited amount of time{% endtrans %};</li>
            <li>{% trans %}must be used in the same browser as where the link was requested{% endtrans %};</li>
            <li>{% trans %}can only be used one time{% endtrans %}.</li>
        </ul>
        <p>{{ 'Please click <a href=\"%RETRYURL%\">here</a> to request a new magic link.'|trans({'%RETRYURL%': moduleURL('ldapPasswordReset/enterEmail')})|raw }}</p>
    </div>

{% endblock %}
